{
  "manifest_version": 3,
  "name": "QuickDraw",
  "version": "1.0",
  "description": "QuickDraw is a Chrome extension that enables users to instantly select and redirect Indicators of Compromise (IOCs) like IPs, file hashes, and email addresses to their favorite OSINT tools directly from the browser.",
  "permissions": ["storage", "tabs", "activeTab", "clipboardRead", "clipboardWrite"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/QD16.png",
    "32": "icons/QD32.png",
    "48": "icons/QD48.png",
    "128": "icons/QD128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["data/predefined_sites.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}
