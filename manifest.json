{
  "manifest_version": 3,
  "name": "Quickdraw",
  "version": "1.0",
  "description": "Extracts selected words and opens them in a new tab.",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
